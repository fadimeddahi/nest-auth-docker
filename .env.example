# Database Configuration
# REQUIRED: PostgreSQL database credentials
# POSTGRES_USER must be 3-32 characters
POSTGRES_USER=nest_user

# REQUIRED: Strong password (min 16 characters recommended)
# Generate with: openssl rand -base64 24
POSTGRES_PASSWORD=your_strong_postgres_password_here_min_16_chars

# Database name (alphanumeric, 2-32 characters)
POSTGRES_DB=nest

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# Docker service name or host (default: 'db' for docker-compose)
POSTGRES_HOST=db

# JWT Configuration
# REQUIRED: JWT signing secret (min 32 characters for cryptographic security)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_min_32_chars_generated_securely_here

# JWT token expiration time (default: 24h)
# Format: number followed by time unit (s, m, h, d)
JWT_EXPIRES_IN=24h

# Application Configuration
# Server port (default: 3000)
PORT=3000

# Environment mode (development, production, test)
NODE_ENV=development
